@model MVC_API_DoAn.Models.DTO.RegisterDTO
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <link rel="shortcut icon" href="assets/images/coffee-icon-sign-symbol-design-free-png.webp" type="image/x-icon">
    <meta name="description" content="">
    <title>Register</title>

    <link rel="stylesheet" href="~/API_DoAn/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/API_DoAn/assets/theme/css/style.css">
    <link rel="stylesheet" href="~/API_DoAn/assets/mobirise/css/mbr-additional.css" type="text/css">
</head>

<body>
    <section class="content2 cid-tsEQSCqggh" id="content2-2">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title mbr-section-title mbr-fonts-style align-center mb-4 display-2">Register</h2>
                            <form asp-controller="PhanQuyen" asp-action="Register" method="POST" id="register-form" onsubmit="return confirmPassword();">
                                <div class="form-group">
                                    <label for="Username">Username:</label>
                                    <input type="text" class="form-control" id="Username" name="Username" required>
                                </div>
                                <div class="form-group">
                                    <label for="Password">Password:</label>
                                    <input type="password" class="form-control" id="Password" name="Password" required>
                                </div>
                                <div class="form-group">
                                    <label for="ConfirmPassword">Confirm Password:</label>
                                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
                                </div>
                                <div class="form-group">
                                    <label for="Roles">Roles:</label>
                                    <input type="text" class="form-control" id="Roles" name="Roles">
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="submit" class="btn btn-primary">Register</button>
                                    <a asp-controller="PhanQuyen" asp-action="Login" class="btn btn-secondary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="assets/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="auth.js"></script>
    <script>
        // Hàm kiểm tra mật khẩu nhập lại
        function confirmPassword() {
            var password = document.getElementById("Password").value;
            var confirmPassword = document.getElementById("ConfirmPassword").value;

            if (password !== confirmPassword) {
                // Nếu mật khẩu không khớp, hiển thị thông báo và không gửi form
                alert("Mật khẩu Nhập lại không trùng khớp!");
                return false; // Ngăn chặn form từ việc submit
            }
            return true; // Cho phép form submit nếu mật khẩu khớp
        }
    </script>
</body>

</html>
